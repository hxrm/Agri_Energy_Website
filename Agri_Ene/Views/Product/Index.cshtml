@model IEnumerable<Product>
@{
    var farmer = ViewData["Farmer"] as AgriUser;
}
<style>
    /* Custom style for banner image */
    .banner-image {
        width: 93vw; /* 100% of the viewport width */
        height: 500px; /* Adjust the height as needed */
        background-size: 100% 100%; /* Ensure the image covers the entire container */
        background-position: 0px 0px;
        position: relative;
        padding: 0 10vw 0 0;
    }
   
</style>
<div class="container-fluid px-0" style="margin: 0; padding: 0;">
    <!-- Banner Image -->
    <div class="banner-image d-flex align-items-center justify-content-center text-center" style="background-image: url('style_extra/s3.jpg'); width: 100vw; height: 500px; background-size: cover; background-position: center; margin: 0; padding: 0;">
        <div class="text-container" style="text-align: center;">
            <h1 class="fw-bold" style="color: white; font-weight: bold;">Howdy there farmer, welcome to your product catalog</h1>
            <p class="lead" style="color: white;">Below find many products.</p>
            <p>
                <a class="btn btn-primary" type="button" asp-area="" asp-controller="Product" asp-action="Create">Create New Product</a>
                <a class="btn btn-outline-secondary" type="button" asp-area="" asp-controller="Product" asp-action="FilterList">List View</a>
            </p>
        </div>
    </div>
</div>
<br />
<div class="card col-md-12 h-100 p-2 rounded-3" style="background-color: rgba(159, 201, 141, 0.7); color: white;">
    <div class="card-header">
        <h2>User Profile</h2>
    </div>
    <div class="card-body">
        <h5 class="card-title h-100 p-1" >
            Name: @farmer.FirstName @farmer.LastName</p>
            <p class="card-text"><strong>Email:</strong> @farmer.Email</p>
            <p class="card-text"><strong>Phone:</strong>  @farmer.PhoneNumber</p>
        <!-- Add more user data fields here as needed -->
    </div>
</div>
<br/>
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var product in Model)
            {
                <div class="col">
                 @*    <img src="~/style_extra/holder.png" /> *@
                    <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                        <div class="card-body">
                            <p class="card-text"> @product.prodName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn-success" asp-controller="Product" asp-action="Details" asp-route-id="@product.prodId"
                                       class="btn btn-sm btn-outline-secondary">View This</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                </div>
                                <small class="text-body-secondary">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
